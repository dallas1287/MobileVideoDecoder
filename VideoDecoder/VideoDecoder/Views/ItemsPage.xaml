<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VideoDecoder.Views.ItemsPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:VideoDecoder.ViewModels"  
             xmlns:cst="clr-namespace:VideoDecoder"
             xmlns:model="clr-namespace:VideoDecoder.Models"  
             x:Name="BrowseItemsPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddItemCommand}" />
    </ContentPage.ToolbarItems>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <cst:CustomMediaView Grid.Row="1"/>
    </Grid>
</ContentPage>
